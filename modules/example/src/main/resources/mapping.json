{
  "settings": {
    "index": {
      "number_of_shards": 1
    }
  },
  "mappings": {
    "_routing": {
      "required": true
    },
    "properties": {
      "id": {
        "type": "keyword"
      },
      "organization": {
        "type": "keyword"
      },
      "name": {
        "type": "keyword"
      },
      "url": {
        "type": "keyword"
      },
      "description": {
        "type": "text"
      },
      "lastCommitAt": {
        "type": "date"
      },
      "stars": {
        "type": "integer"
      },
      "forks": {
        "type": "integer"
      }
    }
  }
}
